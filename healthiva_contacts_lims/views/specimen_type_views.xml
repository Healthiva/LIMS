<odoo>
    <data>
        <record id="view_specimen_type_tree" model="ir.ui.view">
            <field name="name">healthiva.specimen_type.tree</field>
            <field name="model">healthiva.specimen_type</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Specimen Types" multi_edit="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="act_res_partner_2_specimen_type" model="ir.actions.act_window">
            <field name="name">Specimen Types</field>
            <field name="res_model">healthiva.specimen_type</field>
            <field name="view_mode">tree,form</field>
            <field name="views">[("healthiva_contacts_lims.view_specimen_type_tree","tree")]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record a new specimen type
                </p>
            </field>
        </record>
        <record id="view_specimen_type_form" model="ir.ui.view">
            <field name="name">healthiva.specimen_type.form</field>
            <field name="model">healthiva.specimen_type</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Specimen Type">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box"/>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>