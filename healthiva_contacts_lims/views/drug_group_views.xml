<odoo>
    <data>
        <record id="view_drug_group_tree" model="ir.ui.view">
            <field name="name">healthiva.drug_group.tree</field>
            <field name="model">healthiva.drug_group</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Drug Groups" multi_edit="1">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="act_res_partner_2_drug_group" model="ir.actions.act_window">
            <field name="name">Drug Groups</field>
            <field name="res_model">healthiva.drug_group</field>
            <field name="view_mode">tree,form</field>
            <field name="views">[("healthiva_contacts_lims.view_drug_group_tree","tree")]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record a new drug group
                </p>
            </field>
        </record>
        <record id="view_drug_group_form" model="ir.ui.view">
            <field name="name">healthiva.drug_group.form</field>
            <field name="model">healthiva.drug_group</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Drug Group">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box"/>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>