<odoo>
    <data>
        <record id="view_provider_tree" model="ir.ui.view">
            <field name="name">healthiva.provider.tree</field>
            <field name="model">healthiva.provider</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Providers" multi_edit="1">
                    <field name="sequence_number"/>
                    <field name="assigned_location"/>
                    <field name="patient_id"/>
                </tree>
            </field>
        </record>
        <record id="act_res_partner_2_provider" model="ir.actions.act_window">
            <field name="name">Providers</field>
            <field name="res_model">healthiva.provider</field>
            <field name="view_mode">tree,form</field>
            <field name="views">[("healthiva_contacts_lims.view_provider_tree","tree")]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record a new provider
                </p>
            </field>
        </record>
        <record id="view_provider_form" model="ir.ui.view">
            <field name="name">healthiva.provider.form</field>
            <field name="model">healthiva.provider</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Providers">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <field name="active" invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_number"/>
                            <field name="assigned_location"/>
                            <field name="admission_type"/>
                            <field name="preadmit_number"/>
                            <field name="prior_location"/>
                            <field name="attending_doctor"/>
                            <field name="referring_doctor"/>
                            <field name="consulting_doctor"/>
                            <field name="hospital_service"/>
                            <field name="temp_location"/>
                            <field name="pretest_indicator"/>
                            <field name="readmission"/>                        
                            <field name="admit_source"/>                        
                            <field name="ambulatory_status"/>                        
                            <field name="vip_indicator"/>                        
                            <field name="admitting_doctor"/>                        
                            <field name="patient_type"/>                        
                            <field name="visit_number"/>                        
                            <field name="financial_class"/>
                            <field name="charge_indicator"/>
                            <field name="credit_rating"/>
                            <field name="contract_code"/>
                            <field name="contract_date"/>
                            <field name="contract_total"/>
                            <field name="contract_period"/>
                            <field name="interest_code"/>
                            <field name="contract_code"/>
                            <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="tbd_code"/>
                            <field name="tbd_date"/>
                            <field name="bda_code"/>
                            <field name="bd_transfer_total"/>
                            <field name="bd_recovery_total"/>
                            <field name="delete_indicator"/>
                            <field name="delete_date"/>
                            <field name="discharge_disposition"/>
                            <field name="discharge_location"/>
                            <field name="diet_type"/>
                            <field name="service_location"/>
                            <field name="bed_status"/>                        
                            <field name="account_status"/>                        
                            <field name="pending_loc"/>                        
                            <field name="prior_temp_location"/>                        
                            <field name="admit_date"/>         
                            <field name="discharge_date"/>         
                            <field name="current_balance"/>         
                            <field name="adjustments_total"/>         
                            <field name="payments_total"/>         
                            <field name="alt_visitid"/>         
                            <field name="visit_indicator"/>         
                            <field name="other_provider"/>         
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name='internal_notes' string="Internal Notes">
                            <field name="comment" placeholder="Internal note..."/>
                        </page>
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>

