<odoo>
    <data>
        <record id="view_insurance_tree" model="ir.ui.view">
            <field name="name">healthiva.insurance.tree</field>
            <field name="model">healthiva.insurance</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Insurances" multi_edit="1">
                    <field name="sequence_number"/>
                    <field name="insured_last_name"/>
                    <field name="insured_first_name"/>
                </tree>
            </field>
        </record>

        <record id="act_res_partner_2_insurance" model="ir.actions.act_window">
            <field name="name">Insurances</field>
            <field name="res_model">healthiva.insurance</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="views">[("healthiva_contacts_lims.view_insurance_tree","tree")]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record a new insurance
                </p>
            </field>
        </record>

        <record id="view_insurance_form" model="ir.ui.view">
            <field name="name">healthiva.insurance.form</field>
            <field name="model">healthiva.insurance</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Insurances">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box"/>
                        <group>
                            <group>
                                <field name="sequence_number"/>
                                <field name="id_number"/>
                                <field name="payer_code"/>
                                <field name="company_name"/>
                                <field name="company_address1"/>
                                <field name="company_address2"/>
                                <field name="company_address_city"/>
                                <field name="company_address_state"/>
                                <field name="company_address_zip"/>
                                <field name="contact_name"/>
                                <field name="phone"/>
                                <field name="group_number"/>
                                <field name="group_name"/>
                                <field name="employerid"/>
                                <field name="employer_name"/>
                                <field name="plan_effective_date"/>
                                <field name="plan_expiration_date"/>
                                <field name="authorization_info"/>
                                <field name="plan_type"/>
                                <field name="reserve_days"/>                        
                                <field name="reserve_days_delay"/>                        
                                <field name="company_plan_code"/>                        
                                <field name="policy_number"/>  
                            </group>
                            <group>
                                <field name="insured_first_name"/>                        
                                <field name="insured_middle_name"/>
                                <field name="insured_last_name"/>
                                <field name="insured_relation"/>
                                <field name="insured_dob"/>
                                <field name="insured_address1"/>
                                <field name="insured_address2"/>
                                <field name="insured_address_city"/>
                                <field name="insured_address_state"/>
                                <field name="insured_address_zip"/>
                                <field name="assignment_benefits"/>                        
                                <field name="coordinator_benefits"/>
                                <field name="patient_id"/>
                                <field name="primary_payer"/>
                                <field name="notice_admit_code"/>
                                <field name="notice_admit_date"/>
                                <field name="report_eligibility_flag"/>
                                <field name="report_eligibility_date"/>
                                <field name="release_info_code"/>
                                <field name="preadmit_certification"/>
                                <field name="verification_date"/>
                                <field name="verification_by"/>
                                <field name="agreement_type"/>
                                <field name="bill_status"/>    
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name='internal_notes' string="Internal Notes">
                                <field name="comment" placeholder="Internal note..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

