<odoo>
    <data>
        <record id="view_blood_lead_tree" model="ir.ui.view">
            <field name="name">healthiva.blood_lead.tree</field>
            <field name="model">healthiva.blood_lead</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Blood Leads" multi_edit="1">
                    <field name="blood_lead_type"/>
                </tree>
            </field>
        </record>
        <record id="act_res_partner_2_blood_lead" model="ir.actions.act_window">
            <field name="name">Blood Leads</field>
            <field name="res_model">healthiva.blood_lead</field>
            <field name="view_mode">tree,form</field>
            <field name="views">[("healthiva_contacts_lims.view_blood_lead_tree","tree")]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Record a new blood lead
                </p>
            </field>
        </record>
        <record id="view_blood_lead_form" model="ir.ui.view">
            <field name="name">healthiva.blood_lead.form</field>
            <field name="model">healthiva.blood_lead</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Blood Leads">
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <div class="oe_title">
                            <field name="active" invisible="1"/>
                        </div>
                        <group>
                            <group>
                                <field name="race"/>
                                <field name="hispanic"/>
                                <field name="blood_lead_type"/>
                            </group>
                            <group>
                                <field name="purpose"/>
                                <field name="county_code"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page name='internal_notes' string="Internal Notes">
                                <field name="comment" placeholder="Internal note..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_healthiva_blood_lead_filter">
            <field name="name">healthiva.blood_lead.select</field>
            <field name="model">healthiva.blood_lead</field>
            <field name="arch" type="xml">
                <search string="Search Partner">
                    <field name="race"/>
                    <field name="hispanic"/>
                    <field name="blood_lead_type"/>
                    <field name="purpose"/>
                    <field name="county_code"/>  
                    <separator/>
                    <filter string="Patient Race" name="race"/>
                    <filter string="Hispanic Heritage" name="hispanic"/>
                    <filter string="Type" name="blood_lead_type"/>
                    <filter string="Purpose" name="purpose"/>
                    <filter string="County Code Number" name="county_code"/>  
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter string="Patient Race" name="group_race" context="{'group_by': 'race'}"/> 
                        <filter string="Hispanic Heritage" name="group_hispanic" context="{'group_by': 'hispanic'}"/> 
                        <filter string="Type" name="group_blood_lead_type" context="{'group_by': 'blood_lead_type'}"/> 
                        <filter string="Purpose" name="group_purpose" context="{'group_by': 'purpose'}"/> 
                        <filter string="County Code Number" name="group_county_code" context="{'group_by': 'county_code'}"/>                     
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>